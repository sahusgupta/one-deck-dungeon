{
  "name": "networking",
  "version": "1.0.0",
  "description": "testing networking features for one deck dungeon",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "watch-ts": "npx tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "concurrently": "^9.0.1",
    "express": "^4.21.0",
    "nodemon": "^3.1.4",
    "socket.io": "^4.7.5",
    "typescript": "^5.6.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/uuid": "^10.0.0"
  }
}
